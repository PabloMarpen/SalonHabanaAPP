<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/wall">


    <Button
        android:id="@+id/SiguienteButton1"
        android:layout_width="246dp"
        android:layout_height="55dp"
        android:layout_marginTop="260dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/blue_button_style"
        android:fontFamily="@font/worksansregular"
        android:text="Siguiente paso"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tlf"
        app:layout_constraintStart_toStartOf="@+id/tlf"
        app:layout_constraintTop_toBottomOf="@+id/tlf" />

    <EditText
        android:id="@+id/nombre"
        android:layout_width="308dp"
        android:layout_height="61dp"
        android:layout_marginTop="72dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_edittext"
        android:fontFamily="@font/worksansregular"
        android:hint="Ingrese su nombre"
        android:padding="12dp"
        android:textColor="#DFDFDF"
        android:textColorHint="#888888"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/tlf"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/tlf"
        android:layout_width="308dp"
        android:layout_height="61dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/rounded_edittext"
        android:fontFamily="@font/worksansregular"
        android:hint="Ingrese su telefono"
        android:padding="12dp"
        android:textColor="#DFDFDF"
        android:textColorHint="#888888"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/nombre"
        app:layout_constraintStart_toStartOf="@+id/nombre"
        app:layout_constraintTop_toBottomOf="@+id/nombre" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="266dp"
        android:layout_height="52dp"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/worksansextrabold"
        android:text="Primeros pasos"
        android:textColor="#FCAA20"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>